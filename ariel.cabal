  build-depends:       base >=4.12 && <5
                     , bytestring
                     , containers
                     , text
                     , vector
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall

executable ariel
  main-is:             Main.hs
  other-modules:       Examples
                     , Ariel
                     , Ariel.Hoas.Eval
                     , Ariel.Hoas.Expr
                     , Ariel.Hoas.IO
                     , Ariel.Hoas.Value
                     , Ariel.Language.Expr
                     , Ariel.Language.Ty
                     , Ariel.Common.Env
                     , Ariel.Common.Types
  -- other-extensions:
  build-depends:       base >=4.12 && <5
                     , bytestring
                     , containers
                     , text
                     , vector
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite ariel-tests
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  hs-source-dirs:      tests
  other-modules:       Ariel.Tests.Eval
                     , Ariel.Tests.IO
                     , Ariel.Tests.Value
  build-depends:       base >=4.12 && <5
                     , ariel
                     , tasty
                     , tasty-hunit
                     , text
                     , vector
  default-language:    Haskell2010
  ghc-options:         -Wall
