category:            Language
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Ariel
                     , Ariel.Hoas.Eval
                     , Ariel.Hoas.Expr
                     , Ariel.Hoas.IO
                     , Ariel.Hoas.Value
                     , Ariel.Language.Expr
                     , Ariel.Language.Ty
                     , Ariel.Common.Env
                     , Ariel.Common.Types
